<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="index" template="/WEB-INF/views/layout/mainlayout.jsp">
        <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
        <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
        <put-attribute name="section" value="/WEB-INF/views/inc/section.jsp"></put-attribute>
        <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
    </definition>

    <definition name="cscenter.*" template="/WEB-INF/views/layout/cscenterlayout.jsp">
        <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
        <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
        <put-attribute name="content" value="/WEB-INF/views/cscenter/{1}.jsp"></put-attribute>
        <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
    </definition>

    <definition name="admin.*" template="/WEB-INF/views/layout/adminlayout.jsp">
        <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
        <put-attribute name="adminsubmenu" value="/WEB-INF/views/inc/adminsubmenu.jsp"></put-attribute>
        <put-attribute name="content" value="/WEB-INF/views/admin/{1}.jsp"></put-attribute>
    </definition>

    <definition name="price" template="/WEB-INF/views/admin/priceupdate.jsp"></definition>
    <definition name="adminlogin" template="/WEB-INF/views/admin/adminlogin.jsp">
        <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
    </definition>

    <definition name="showanswer" template="/WEB-INF/views/cscenter/showanswer.jsp">
        <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
    </definition>

    <!--마이페이지 부분-->
    <definition name="mypage.*" template="/WEB-INF/views/layout/mypagelayout.jsp">
        <put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
        <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
        <put-attribute name="submenu" value="/WEB-INF/views/inc/mypagesubmenu.jsp"></put-attribute>
        <put-attribute name="content" value="/WEB-INF/views/mypage/{1}.jsp"></put-attribute>
        <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
    </definition>

</tiles-definitions>